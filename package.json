{
  "name": "@ben-ryder/jigsaw",
  "description": "A React component library with Tailwind CSS for use in my personal projects.",
  "version": "0.0.2",
  "license": "AGPL-3.0-only",
  "author": "Ben-Ryder",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ben-Ryder/jigsaw.git"
  },
  "bugs": {
    "url": "https://github.com/Ben-Ryder/jigsaw/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "BROWSER=none start-storybook -p 3000",
    "build": "rimraf ./dist && rollup -c",
    "build-storybook": "build-storybook",
    "prepublishOnly": "npm run build"
  },
  "main": "dist/styled/cjs/index.js",
  "module": "dist/styled/esm/index.js",
  "types": "dist/styled/index.d.ts",
  "files": [
    "base",
    "styled"
  ],
  "dependencies": {
    "classnames": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.2.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-interactions": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/node-logger": "^6.4.22",
    "@storybook/preset-create-react-app": "^4.1.0",
    "@storybook/react": "^6.4.22",
    "@storybook/testing-library": "^0.0.9",
    "@types/node": "^17.0.24",
    "@types/react": "^17.0.44",
    "@types/react-dom": "^17.0.15",
    "autoprefixer": "^10.4.4",
    "husky": "^7.0.4",
    "postcss": "^8.4.12",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-dts": "^4.2.1",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  }
}
